{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Lumina",
  "scopeName": "source.lumina",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#function-call"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.lumina",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.block.lumina",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.lumina",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.lumina",
              "match": "\\\\(?:[nrt\"'\\\\]|u\\{[0-9a-fA-F]{1,6}\\}|x[0-9a-fA-F]{2})"
            },
            {
              "name": "meta.interpolation.lumina",
              "begin": "\\{",
              "end": "\\}",
              "patterns": [
                {
                  "include": "$self"
                }
              ]
            }
          ]
        },
        {
          "name": "string.quoted.triple.lumina",
          "begin": "\"\"\"",
          "end": "\"\"\""
        },
        {
          "name": "string.quoted.raw.lumina",
          "begin": "r\"",
          "end": "\""
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.lumina",
          "match": "\\b(?:0x[0-9a-fA-F_]+|0b[01_]+|\\d[\\d_]*(?:\\.\\d[\\d_]*)?(?:[eE][+-]?\\d[\\d_]*)?)(?:i(?:8|16|32|64|128)|u(?:8|16|32|64|128)|f(?:32|64))?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.lumina",
          "match": "\\b(?:if|else|match|while|for|return|await|async|move|is|as|try)\\b"
        },
        {
          "name": "keyword.declaration.lumina",
          "match": "\\b(?:fn|let|struct|enum|type|trait|impl|import|from|pub|extern|ref|mut)\\b"
        },
        {
          "name": "constant.language.boolean.lumina",
          "match": "\\b(?:true|false)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.lumina",
          "match": "\\b(?:int|float|bool|string|void|i8|i16|i32|i64|i128|u8|u16|u32|u64|u128|f32|f64|Vec|HashMap|HashSet|Option|Result|Promise)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.lumina",
          "match": "(\\|>|\\?\\.|\\?\\:|\\?\\?|\\.\\.|\\.\\.=|==|!=|<=|>=|&&|\\|\\||[+\\-*/%<>=!&|^~?:])"
        }
      ]
    },
    "function-call": {
      "patterns": [
        {
          "name": "entity.name.function.lumina",
          "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*(?=\\()"
        }
      ]
    }
  }
}

